@model Diploma_Curator_Subsystem.ViewModels.LoginModel
@{
    ViewData["Title"] = "Войти на сайт";
}

<h2>Вход на сайт</h2>

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Email" class="control-label">Введите Email</label>
                <input type="text" asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Введите пароль</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Войти" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}